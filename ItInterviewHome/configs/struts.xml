<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.objectFactory" value="spring" />
	<constant name="struts.i18n.encoding" value="utf-8" />
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="messageResource" />

	<!-- 用户登录等操作 -->
	<package name="mypackage" extends="json-default">

		<!-- **********************后台管理模块******************** -->
		<action name="uploadHeadpic" method="uploadPic" class="managerLoginAction">
			<result name="input">/manager/addnews.jsp</result>
			<interceptor-ref name="fileUpload">
				<param name="maximumSize">512000000</param>
				<param name="allowedTypes">
					image/bmp,image/png,image/gif,image/pjpeg,image/jpeg</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack"></interceptor-ref>


		</action>


		<!-- 获取select的列表 -->

		<action name="findSupernewsList" class="searchSupernewsAction"
			method="findSupernewsList">
			<result name="success">/manager/listnews.jsp</result>
			<result name="faild">/login.jsp</result>
		</action>


		<!-- <action name="index" class="searchSupernewsAction" method="indexInit"> -->
		<!-- <result name="success" type="redirectAction">findIndexSupernewsListFrontWeb -->
		<!-- </result> -->
		<!-- </action> -->




		<action name="saveSuperInfo" class="searchSupernewsAction"
			method="saveSuperInfo">
			<result name="success" type="redirectAction">findSupernewsList</result>
		</action>

		<action name="updateSuperInfo" class="searchSupernewsAction"
			method="updateSuperInfo">
			<result name="success" type="redirectAction">findSupernewsList</result>
		</action>
		<action name="deleteSuperInfo" class="searchSupernewsAction"
			method="deleteSuperInfo">
			<result name="success" type="redirectAction">findSupernewsList</result>
		</action>
		<action name="selectSuperInfo" class="searchSupernewsAction"
			method="selectSuperInfo">
			<result name="success">/manager/changenews.jsp</result>
			<result name="faild">/login.jsp</result>
		</action>
		<action name="loginManger" class="managerLoginAction" method="loginManger">
			<result name="success">/index.jsp</result>
			<result name="faild">/login.jsp</result>
		</action>

<action name="selectSuperInfowebfront" class="searchSupernewsAction"
			method="selectSuperInfo">
			<result name="success">/webfront/news-detail.jsp</result>
			<result name="faild">/login.jsp</result>
		</action>



		<action name="findSupernewsListFrontWeb" class="searchSupernewsAction"
			method="findSupernewsList">
			<result name="success">/webfront/news.jsp</result>
			<result name="faild">/login.jsp</result>
		</action>

		<action name="welcome" class="searchSupernewsAction" method="findSupernewsList">
			<result name="success">/webfront/index.jsp</result>
			<result name="faild">/login.jsp</result>
		</action>

		<action name="welcome_weixin" class="searchSupernewsAction"
			method="findSupernewsList">
			<result name="success">/webweixin/htmls/index.jsp</result>
			<result name="faild">/login.jsp</result>
		</action>
		<action name="findSupernewsListweixinWeb" class="searchSupernewsAction"
			method="findSupernewsList">
			<result name="success">/webweixin/htmls/news.jsp</result>
			<result name="faild">/login.jsp</result>
		</action>
		
		
		<action name="selectSuperInfoweixin" class="searchSupernewsAction"
			method="selectSuperInfo">
			<result name="success">webweixin/htmls/news_detail.jsp</result>
			<result name="faild">/login.jsp</result>
		</action>

	</package>
</struts>